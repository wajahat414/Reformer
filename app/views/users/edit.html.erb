    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<%= form_with model:(@user) do |form| %>
    <%= label(:user, :username,value: "Change username") %>
    <%= form.text_field :username, placeholder: @user.username,value: @user.username%><br><br>
    <%= label(:user, :email,value: "Enter your email") %>
    <%= form.text_field :email,value: @user.email %><br><br>
    <%= label(:user, :password,value: "Enter password") %>
    <%= form.password_field :password,value: @user.password%><br><br>
    <%= form.submit %>
  <% end %>
  